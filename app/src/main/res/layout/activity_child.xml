<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.myapplication.ChildActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolb"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <!--Aqui creamos nuestro Spinner no se olviden crear 2 archivos XML
            en los que le daremos estilo al titulo del spinner y a su lista de
            elementos-->
        <Spinner
            android:id="@+id/spinnerTb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Spinner>

    </android.support.v7.widget.Toolbar>

    <!--Usaremos este textView para probar la funcionalidad del spinner
        cambiando su color de fondo-->
    <TextView
        android:id="@+id/txt"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
